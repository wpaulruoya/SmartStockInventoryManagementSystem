@model InventoryManagementSystem.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = null; // Disable layout to hide title bar
}

<h2>Login</h2>

<form method="post" asp-controller="Login" asp-action="Authenticate">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="Email" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="PasswordHash" required>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
