@{
    ViewData["Title"] = "Delete Item - SmartStock";
}

<h1>Are you sure you want to delete this item?</h1>

<div>
    <strong>@Model.Name</strong> - Quantity: @Model.Quantity, Price: @Model.Price
</div>

<form method="post" action="@Url.Action("Delete", "Inventory", new { id = Model.Id })">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Inventory")" class="btn btn-secondary">Cancel</a>
</form>
